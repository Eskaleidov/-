//Обход графа в глубину (DFS)
#include <iostream>
#include <vector>
using namespace std;

void dfs(int node, vector<vector<int>>& graph, vector<bool>& visited) {
    visited[node] = true;
    cout << node << " ";
    
    for (int neighbor : graph[node]) {
        if (!visited[neighbor]) {
            dfs(neighbor, graph, visited);
        }
    }
}

int main() {
    vector<vector<int>> graph = {
        {1, 2},     // 0 -> 1, 2
        {0, 3, 4},  // 1 -> 0, 3, 4
        {0, 5},     // 2 -> 0, 5
        {1},        // 3 -> 1
        {1},        // 4 -> 1
        {2}         // 5 -> 2
    };
    
    vector<bool> visited(6, false);
    cout << "DFS order: ";
    dfs(0, graph, visited);
    return 0;
}
